<?php

namespace Itransition\DataImporterBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * ProductItem
 *
 * @ORM\Table(name="product_item")
 * @ORM\Entity(repositoryClass="Itransition\DataImporterBundle\Repository\ProductItemRepository")
 */
class ProductItem
{
    /**
     * @var int
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @var string
     *
     * @ORM\Column(type="string", length=10, unique=true, nullable=false)
     */
    private $code;

    /**
     * @var string
     *
     * @ORM\Column(type="string", length=100)
     */
    private $name;

    /**
     * @var text
     *
     * @ORM\Column(type="text", length=400)
     */
    private $description;

    /**
     * @var int
     *
     * @ORM\Column(type="integer")
     */
    private $stock;

    /**
     * @var int
     *
     * @ORM\Column(type="float")
     */
    private $price;

    /**
     * @var int
     *
     * @ORM\Column(type="boolean", length=1, nullable=true)
     */
    private $discounted;

    /**
     * Get id
     *
     * @return integer 
     */
    public function getId()
    {
        return $this->id;
    }
}
